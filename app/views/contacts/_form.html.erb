<%= form_for @contact, html: {class: 'form-horizontal'} do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :name, class: "col-sm-3 control-label"%>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label"%>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control"  %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :website, class: "col-sm-3 control-label"%>
        <div class="col-sm-8">
          <%= f.text_field :website, class: "form-control"  %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :subject, class: "col-sm-3 control-label"%>
        <div class="col-sm-8">
          <%= f.text_field :subject, class: "form-control"  %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :content, class: "col-sm-3 control-label"%>
        <div class="col-sm-8">
          <%= f.text_area :content, class: "form-control"  %>
        </div>
      </div>

      <%= f.submit "Send e-mail", class: "btn btn-default" %>

    </div>
  </div>
<% end %>
