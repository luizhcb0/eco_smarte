<h1>Pools</h1>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="table-responsive">
        <table class="table">
          <tr>
            <th>Pool Name</th>
            <th>Costumer Name</th>
            <th>Model</th>
            <th>Actions</th>
          </tr>
          <% @pools.each do |pool| %>
            <tr>
              <td><%= pool.name %></td>
              <td><%= pool.user.name %></td>
              <td><%= pool.pool_model.description %></td>

              <td>
                <%= link_to pool_path(pool), class:"btn btn-success btn-circle" do %>
                  <i class="fa fa-eye"></i>
                <% end %>
                <%= link_to edit_pool_path(pool), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-pencil"></i>
                <% end %>
                <%= link_to pool_path(pool), class:"btn btn-danger btn-circle", method:"delete" do %>
                 <i class="fa fa-trash-o"></i>
               <% end %>
              </td>

            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>


<div class="">
  <%= link_to new_pool_path do %>
    <button class="btn btn-tutorial" name="button">Add Pool</button>
  <% end %>
</div>


