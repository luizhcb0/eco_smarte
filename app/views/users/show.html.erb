<section class="container-fluid">
  <h1><%= @user.name %></h1>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>User Type</th>
              <th>Phone</th>
              <th>Address</th>
              <th>City</th>
              <th>Postal Code</th>
            </tr>
            <tr>
              <td><%= @user.name %></td>
              <td><%= @user.email %></td>
              <td><%= role(@user.user_type) %></td>
              <td><%= @user.phone %></td>
              <td><%= @user.address %></td>
              <td><%= @user.city %></td>
              <td><%= @user.postal_code %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <% if current_user.user_type == "admin" %>
    <%= link_to '<button class="btn btn-default" name="button">Edit</button>'.html_safe, edit_user_path(@user.id) %>
  <% else %>
    <%= link_to '<button class="btn btn-default" name="button">Edit</button>'.html_safe, user_profile_edit_path %>
  <% end %>
  
  <% if current_user.user_type == "admin" %>
    <div class="row">
      <h3>Costumer's pools</h3>
      <div class="col-sm-8 col-sm-offset-2">
        <div class="table-responsive">
          <table class="table">
            <tr>
              <th>Pool Name</th>
              <th>Costumer Name</th>
              <th>Model</th>
              <th>Actions</th>
            </tr>
            <% if @pools.present? %>
              <% @pools.each do |pool| %>
                <tr>
                  <td><%= pool.name %></td>
                  <td><%= pool.user.name %></td>
                  <td><%= pool.pool_model.description if pool.pool_model.present? %></td>

                  <td>
                    <%= link_to pool_path(pool), class:"btn btn-success btn-circle" do %>
                      <i class="fa fa-eye"></i>
                    <% end %>
                    <% if current_user.user_type == "admin" %>
                      <%= link_to admin_edit_pool_path(pool), class:"btn btn-primary btn-circle" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                    <% else %>
                      <%= link_to edit_pool_path(pool), class:"btn btn-primary btn-circle" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                    <% end %>
                    <%= link_to pool_path(pool), class:"btn btn-danger btn-circle", method:"delete" do %>
                     <i class="fa fa-trash-o"></i>
                   <% end %>
                  </td>

                </tr>
              <% end %>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  <% end %>

</section>
