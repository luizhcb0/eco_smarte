<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for @user, url: {action: :user_password_update}, html: {class: 'form-horizontal'}, novalidate: 'novalidate' do |f| %>

      <div class="row">
        <div class="form-group group">
          <%= f.label :new_password, class: "col-sm-3 control-label"%>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <div class="col-sm-8">
            <%= f.password_field :password, class: "form-control", required: "required", autocomplete: "off" %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="form-group group">
          <%= f.label :password_confirmation, class: "col-sm-3 control-label"%>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, class: "form-control", required: "required", autocomplete: "off" %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="actions">
          <%= f.submit "Save", class: "btn btn-tutorial" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
