<h1>Water Measurements</h1>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="table-responsive">
      <table class="table">
        <tbody>
          <tr>
            <th>Pool Name</th>
            <th>Date</th>
            <th>Temperature</th>
            <th>pH</th>
            <th>Cu (ppm)</th>
            <th>Calcium</th>
            <th>Phosphate</th>
            <th>Chlorine</th>
            <th>Oxygen</th>
            <th>Actions</th>
          </tr>
          <% @waters.each do |water| %>
            <tr>
              <td><%= water.pool.name %></td>
              <td><%= water.measurement_date %></td>
              <td><%= "#{water.temperature}  #{water.temperature_unit.humanize}" if (water.temperature.present? && water.temperature_unit.present?) %></td>
              <td><%= water.ph if water.ph.present? %></td>
              <td><%= water.cuppm if water.cuppm.present? %></td>
              <td><%= water.calcium if water.calcium.present? %></td>
              <td><%= water.phosphate if water.phosphate.present? %></td>
              <td><%= water.chlorine if water.chlorine.present? %></td>
              <td><%= water.oxygen if water.oxygen.present? %></td>
              <td>
                <%= link_to edit_water_path(water), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-pencil"></i>
                <% end %>
                <%= link_to water_path(water), class:"btn btn-danger btn-circle", method:"delete" do %>
                 <i class="fa fa-trash-o"></i>
               <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<button class="btn btn-default" id="close" name="button">Close</button>