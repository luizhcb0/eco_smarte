<h1>Water Measurements</h1>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="table-responsive">
        <table class="table">
          <tr>
            <th>Pool Name</th>
            <th>Costumer Name</th>
            <th>Measurement Date</th>
          </tr>
          <% @waters.each do |water| %>
            <tr>
              <td><%= water.pool.name %></td>
              <td><%= water.pool.user.name %></td>
              <td><%= water.measurement_date %></td>

              <td>
                <%= link_to water_path(water), class:"btn btn-success btn-circle" do %>
                  <i class="fa fa-eye"></i>
                <% end %>
                <%= link_to edit_water_path(water), class:"btn btn-primary btn-circle" do %>
                  <i class="fa fa-pencil"></i>
                <% end %>
                <%= link_to water_path(water), class:"btn btn-danger btn-circle", method:"delete" do %>
                 <i class="fa fa-trash-o"></i>
               <% end %>
              </td>

            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>


<div class="">
  <%= link_to new_water_path do %>
    <button class="btn btn-tutorial" name="button">Add New Data</button>
  <% end %>
</div>


