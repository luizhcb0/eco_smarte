<!-- Logo -->
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%= image_tag 'ecosmarte.png', class: 'logo_eco' %>
  </div>
</div>
<!--  ------>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for @water, html: {class: 'form-horizontal'}, novalidate: 'novalidate' do |f| %>
    
      <div class="row">
        <div class="form-group group">
          <%= f.label :measurement_date, class: "col-sm-3 control-label" %>
          <div class="col-sm-8">
            <%= f.date_field :measurement_date, {class: "form-control date", required: "required", pattern: "[0-9]{2}[\/|-]{1}[0-9]{2}[\/|-]{1}[0-9]{4}$"} %>
          </div>
        </div>
      </div>
    
      <div class="row">
        <div class="form-group group">
          <%= f.label :temperature, class: "col-sm-3 control-label"%>
          <div class="col-sm-5">
            <%= f.text_field :temperature, class: "form-control", autofocus: true  %>
          </div>
          <div class="col-sm-3">
            <%= f.select :temperature_unit, options_for_select(Water.temperature_units.keys.map { |t| [t.humanize, t] }, @water.temperature_unit), {include_blank: "Choose"}, {class: "form-control"} %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="form-group group">
          <%= f.label :ph, "pH <small style='font-weight:normal;'><br>(6.8 - 7.2 Ideal)</small>".html_safe, class: "col-sm-3 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :ph, class: "form-control", autofocus: true %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="form-group group">
          <%= f.label :cuppm, "Cu (ppm) <small style='font-weight:normal;'><br>(0.4 - 0.7 Ideal)</small>".html_safe, class: "col-sm-3 control-label"%>
          <div class="col-sm-8">
            <%= f.text_field :cuppm, class: "form-control", autofocus: true %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="form-group group">
          <%= f.label :calcium, "Calcium <small style='font-weight:normal;'><br>(400+ Ideal)</small>".html_safe, class: "col-sm-3 control-label"%>
          <div class="col-sm-8">
            <%= f.text_field :calcium, class: "form-control", autofocus: true %>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="form-group group">
          <%= f.label :phosphate, "Phosphate (ppb) <small style='font-weight:normal;'><br>(0 - 100 Ideal)</small>".html_safe, class: "col-sm-3 control-label"%>
          <div class="col-sm-8">
            <%= f.text_field :phosphate, class: "form-control", autofocus: true %>
          </div>
        </div>
      </div>
      
      <% if @pool.user.user_type == "commercial" %>
        <div class="row">
          <div class="form-group group">
            <%= f.label :free_chlorine, class: "col-sm-3 control-label"%>
            <div class="col-sm-8">
              <%= f.text_field :free_chlorine, class: "form-control", autofocus: true %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="form-group group">
            <%= f.label :total_chlorine, class: "col-sm-3 control-label"%>
            <div class="col-sm-8">
              <%= f.text_field :total_chlorine, class: "form-control", autofocus: true %>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="row">
        <div class="form-group group">
          <%= f.label :oxygen, class: "col-sm-3 control-label"%>
          <div class="col-sm-8">
            <%= f.text_field :oxygen, class: "form-control", autofocus: true %>
          </div>
        </div>
      </div>
      
      <%= f.hidden_field :pool_id, value: @pool.id %>
      
      <div class="row">
        <div class="actions">
          <%= f.submit "Save", class: "btn btn-tutorial" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
